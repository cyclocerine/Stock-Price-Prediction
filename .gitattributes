# Auto detect text files and perform LF normalization
* text=auto

# Basic .gitattributes for a python repo.
*.py     text diff=python
*.pyx    text diff=python
*.pxd    text diff=python
*.pxi    text diff=python

# Source files
*.pyw    text eol=crlf
*.ipynb  text eol=lf

# Binary files
*.db     binary
*.p      binary
*.pkl    binary
*.pickle binary
*.h5     binary
*.hdf5   binary
*.joblib binary

# Jupyter notebook
*.ipynb  linguist-documentation

# Documentation
*.md       text diff=markdown
*.txt      text
*.rst      text
*.pdf      binary
*.html     text diff=html
*.css      text diff=css
*.js       text
README*    text

# Graphics
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.tif      binary
*.tiff     binary
*.ico      binary
*.svg      text
*.eps      binary

# Data files
*.csv      text
*.json     text
*.xml      text
*.xlsx     binary
*.xls      binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore     export-ignore
.github        export-ignore
